# Challenge Configuration
CHALLENGE_MODE=hyrotrader
INITIAL_CAPITAL=10000
TARGET_PROFIT_PERCENT=10
MIN_TRADING_DAYS=10

# Risk Management
RISK_PER_TRADE_BASE=0.5
RISK_PER_TRADE_MAX=1.0
RISK_PER_TRADE_MIN=0.3
MAX_DAILY_LOSS_PERCENT=1.0
MAX_TOTAL_DD_PERCENT=8.0

# Strategy Configuration
MIN_CONFLUENCE_SCORE=70
ENABLE_DYNAMIC_ASSET_SELECTION=true
ENABLE_NEWS_FILTER=true
ENABLE_ATR_TP=true

# Exchange Selection (bybit or binance)
EXCHANGE_TYPE=bybit

# Exchange API - Bybit Demo/Testnet
# Get your API keys from: https://testnet.bybit.com/app/user/api-management
EXCHANGE_API_KEY=your_bybit_api_key_here
EXCHANGE_API_SECRET=your_bybit_api_secret_here
EXCHANGE_TESTNET=true

# Telegram Alerts (optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
ENABLE_ALERTS=false

# Monitoring
DASHBOARD_PORT=8080
LOG_LEVEL=info

# Trading Session
WEEKEND_TRADING_ENABLED=false
